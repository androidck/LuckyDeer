<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context=".mine.salesman.PerfectInfoActivity">

    <include layout="@layout/top_bar" />
    <!--用户id-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/user_id" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            tools:text="365215895" />
    </LinearLayout>
    <!--公司名称-->
    <LinearLayout
        android:id="@+id/rl_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/company_name" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user_open"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:singleLine="true"
            tools:text="@string/company_synopsis" />
    </LinearLayout>
    <!--公司简介-->
    <LinearLayout
        android:id="@+id/rl_company_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/company_synopsis" />

        <TextView
            android:id="@+id/tv_company_synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user_open"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:singleLine="true"
            tools:text="@string/company_synopsis" />
    </LinearLayout>
    <!--公司地址-->
    <LinearLayout
        android:id="@+id/ll_customer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/customer_address" />

        <TextView
            android:id="@+id/tv_customer_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user_open"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:singleLine="true"
            tools:text="@string/customer_address" />
    </LinearLayout>
    <!--业务介绍-->
    <LinearLayout
        android:id="@+id/rl_business_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/business_introduction" />

        <TextView
            android:id="@+id/tv_business_introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user_open"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:singleLine="true"
            tools:text="@string/business_introduction" />
    </LinearLayout>
    <!--业务员类型-->
    <LinearLayout
        android:id="@+id/ll_salesperson_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/salesperson_type" />

        <TextView
            android:id="@+id/tv_salesperson_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user_open"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            tools:text="@string/salesperson_type" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit_Info"
        style="@style/style_login_btn"
        android:enabled="true"
        android:text="@string/submit_Info" />

</LinearLayout>

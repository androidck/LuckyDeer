<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/money_open_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_open"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/img_head_image"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="?selectableItemBackground"
                    android:src="@mipmap/user_photo_no"
                    app:qmui_border_color="@color/white"
                    app:qmui_corner_radius="@dimen/dp_35"
                    app:qmui_is_oval="false" />

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_head_image"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_30px"
                    tools:text="月凝香西" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="打开红包"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_50px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_open"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:foreground="?selectableItemBackground"
            android:src="@mipmap/money_open"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_full"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".weight.PublicDialog">

    <LinearLayout
        android:id="@+id/ll_edittext_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_15"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nick_name" />

        <EditText
            android:id="@+id/et_nick_name"
            style="@style/style_hint_color_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/rectangle_white_full_6"
            android:maxLength="6"
            android:padding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:visibility="gone"
        tools:text="标题" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/text_size_26px"
        tools:text="文本" />

    <include layout="@layout/include_button_ok_or_cancel" />

</LinearLayout>

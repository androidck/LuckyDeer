                    android:layout_weight="0.4"
                    tools:text="11:12" />

                <TextView
                    android:id="@+id/tv_third_day_afternoon_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@string/text_perfect_plan_details_date" />

                <TextView
                    android:id="@+id/tv_third_day_afternoon_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:textColor="@color/color_80_blue"
                    tools:text="执行状态" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/style_line" />
        <!--第四天养卡-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fourth_day_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@string/text_perfect_plan_details_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/reimbursement_bills"
                    android:drawableRight="@mipmap/reimbursement_bills"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="@string/text_perfect_plan_details_repayment_bill"
                    android:textColor="@color/color_golden_ffc000" />
            </LinearLayout>
            <!--养卡-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fourth_day_repayment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    tools:text="11:12" />

                <TextView
                    android:id="@+id/tv_fourth_day_repayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@string/text_perfect_plan_details_repayment" />

                <TextView
                    android:id="@+id/tv_fourth_day_repayment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:textColor="@color/color_80_blue"
                    tools:text="执行状态" />
            </LinearLayout>
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</android.support.v7.widget.CardView>


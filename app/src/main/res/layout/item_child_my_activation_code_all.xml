<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    tools:context=".home.business.adapter.MyActivationCodeChildAdapter">


    <TextView
        android:id="@+id/tv_activation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        tools:text="激活码" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/btn_copy_upgrade_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_10"
            android:text="复制升级码"
            android:textColor="@color/color_80_blue"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/iv_has_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/has_used"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    tools:context=".home.adapter.MySeparationAdapter">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/share_profit" />

    <LinearLayout
        android:id="@+id/ll_withdraw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/text_size_32px"
                tools:text="类型" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/color_hint"
                android:textSize="@dimen/text_size_26px"
                tools:text="时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="@dimen/text_size_32px"
                tools:ignore="RtlHardcoded"
                tools:text="1000" />

            <TextView
                android:id="@+id/tv_withdrawal_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="@dimen/text_size_32px"
                tools:ignore="RtlHardcoded"
                tools:text="审核中" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_divided_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_divided_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_32px"
            tools:text="分润账号" />

        <TextView
            android:id="@+id/tv_amount_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/text_size_32px"
            tools:ignore="RtlHardcoded"
            tools:text="消费金额" />

        <TextView
            android:id="@+id/tv_divided_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_divided_account_number"
            android:layout_marginTop="@dimen/dp_5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_32px"
            tools:text="分润类型" />

        <TextView
            android:id="@+id/tv_divided_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_divided_account_number"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_golden_ffc000"
            android:textSize="@dimen/text_size_32px"
            tools:ignore="RtlHardcoded"
            tools:text="分润金额" />

        <TextView
            android:id="@+id/tv_divided_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_divided_type"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/text_size_26px"
            tools:ignore="RtlHardcoded"
            tools:text="审核中" />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".home.pepayment.adapter.ConsumptionListAdapter">

    <LinearLayout
        android:id="@+id/ll_not_fillet_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_consumption_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:singleLine="true"
            tools:text="15:12" />

        <TextView
            android:id="@+id/tv_amount_consumption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="@string/consumption" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="end"
            android:singleLine="true"
            tools:text="@string/company_name" />

    </LinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        android:id="@+id/rrl_fillet_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/white"
        app:qmui_borderColor="@color/white"
        app:qmui_radiusBottomLeft="@dimen/dp_5"
        app:qmui_radiusBottomRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fillet_white_consumption_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:singleLine="true"
                tools:text="15:12" />


            <TextView
                android:id="@+id/tv_fillet_white_amount_consumption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="@string/consumption" />

            <TextView
                android:id="@+id/tv_fillet_white_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="end"
                android:singleLine="true"
                tools:text="@string/company_name" />
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
</LinearLayout>

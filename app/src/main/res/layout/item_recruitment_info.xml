<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    tools:context=".mine.salesman.adapter.RecruitmentInfoAdapter">

    <LinearLayout
        android:id="@+id/recruitment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recruitment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            tools:text="招聘标题" />

        <TextView
            android:id="@+id/tv_recruitment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/text_size_24px"
            tools:text="状态" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recruitment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recruitment_title"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recruitment_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/text_size_24px"
            tools:text="招聘地址" />


        <TextView
            android:id="@+id/tv_release_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/dp_5"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/text_size_24px"
            tools:text="发布时间" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recruitment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recruitment_address"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/text_size_24px"
        tools:text="招聘描述" />

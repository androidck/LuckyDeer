<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".find.business.fragment.RedEnvelopesDetailFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_list_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_issue_or_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/dp_10"
                tools:text="@string/text_red_envelopes_detail_received_total" />

            <TextView
                android:id="@+id/tv_current_funds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/dp_10"
                tools:text="@string/text_red_envelopes_detail_current_funds" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_withdraw_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/button_green_pattern"
            android:enabled="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/text_red_envelopes_detail_withdraw_cash"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_list_line" />
</LinearLayout>

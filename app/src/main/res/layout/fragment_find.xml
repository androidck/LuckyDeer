<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".home.fragment.FindFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/top_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qmui_topbar_bg_color="#00ffffff"
        app:qmui_topbar_separator_color="#00ffffff" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:fitsSystemWindows="true"
            app:qmui_topbar_title_text_size="@dimen/text_size_36px">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_55"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/line_height"
                android:background="@color/white"
                app:tabIndicatorColor="@color/color_80_blue"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabMode="fixed"
                app:tabPaddingEnd="@dimen/dp_20"
                app:tabPaddingStart="@dimen/dp_20"
                app:tabSelectedTextColor="@color/color_80_blue"
                app:tabTextAppearance="@style/MyCustomTextAppearance" />
        </com.qmuiteam.qmui.widget.QMUITopBar>

        <com.qmuiteam.qmui.widget.QMUIViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
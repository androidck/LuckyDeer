<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:orientation="horizontal"
    android:padding="@dimen/dp_20"
    tools:context=".home.pepayment.date.PlanDetailsActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_enactment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/rectangle_gray_d8_full"
        android:enabled="true"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="重新制定"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_submit_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/rectangle_blue_full_0096ff_30"
        android:enabled="true"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="提交账单"
        android:textColor="@color/white" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_full"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:visibility="gone"
        tools:text="标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/nick_name" />

        <EditText
            android:id="@+id/et_code"
            style="@style/style_hint_color_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/rectangle_white_full_6"
            android:inputType="number"
            android:maxLength="6"
            android:padding="@dimen/dp_5" />
    </LinearLayout>

    <include layout="@layout/include_button_ok_or_cancel" />
</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!-- 顶部 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:background="@android:color/white"
                >
                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="216dp"
                    android:src="@mipmap/banner"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/item_message_bg"
                    >
                    <TextView
                        android:id="@+id/btn_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/notification_anticon"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/color_message"
                        android:textSize="15dp"
                        android:drawablePadding="8dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>

            </RelativeLayout>
            <!-- 菜单 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_net_center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="极速办卡"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/network_center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_net_supermarket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="网贷超市"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/network_supermarket"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_life"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="附近生活"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/nearby_life"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_credit_card_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="信用卡服务"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/credit_card_service"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
            </LinearLayout>
            <!-- 信用卡推荐 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_share_bg"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_card_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="办卡推荐"
                    android:drawableRight="@mipmap/caret_circle_o_right_anticon_copy"
                    android:textSize="@dimen/text_size_30px"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    />
                <include layout="@layout/division_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/good_card_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        ></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
            <!-- 网贷推荐 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_share_bg"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_net_loan_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="网贷推荐"
                    android:drawableRight="@mipmap/caret_circle_o_right_anticon_copy"
                    android:textSize="@dimen/text_size_30px"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    />
                <include layout="@layout/division_line"/>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/net_loan_recyclerView"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
               </RelativeLayout>
            </LinearLayout>
            <!-- 用卡攻略 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_share_bg"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/tv_use_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="用卡攻略"
                    android:drawableRight="@mipmap/caret_circle_o_right_anticon_copy"
                    android:textSize="@dimen/text_size_30px"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    />
                <include layout="@layout/division_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/use_card_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        ></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:layout_marginTop="@dimen/dp_10"--><!--app:cardCornerRadius="@dimen/dp_5"--><!--app:cardPreventCornerOverlap="true"--><!--app:cardUseCompatPadding="true"--><!--tools:context=".home.pepayment.adapter.PlanDetailsAdapter">-->
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    app:qmui_borderColor="@color/white"
    app:qmui_radius="@dimen/dp_5"
    tools:context=".home.pepayment.adapter.PlanDetailsAdapter">

    <!--<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:qmui_backgroundColor="@color/white"-->
    <!--app:qmui_borderColor="@color/white"-->
    <!--app:qmui_radius="@dimen/dp_5">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--计划执行中（蓝色）-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/rrl_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qmui_backgroundColor="@color/color_80_blue"
            app:qmui_borderColor="@color/color_80_blue"
            app:qmui_radiusTopLeft="@dimen/dp_5"
            app:qmui_radiusTopRight="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_blue_repayment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="2018.11.21" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="2018.11.21" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/plan_repayment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/actual_repayment" />

            </LinearLayout>
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
        <!--计划完成（灰色）-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/rrl_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:qmui_backgroundColor="@color/color_green_8dd087"
            app:qmui_borderColor="@color/color_green_8dd087"
            app:qmui_radiusTopLeft="@dimen/dp_5"
            app:qmui_radiusTopRight="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="2018.11.21" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="2018.11.21" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/plan_repayment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/actual_repayment" />
            </LinearLayout>
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
        <!--计划完成（红色）-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/rrl_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:qmui_backgroundColor="@color/color_60_Red"
            app:qmui_borderColor="@color/color_60_Red"
            app:qmui_radiusTopLeft="@dimen/dp_5"
            app:qmui_radiusTopRight="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="2018.11.21" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="2018.11.21" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/plan_repayment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="@string/actual_repayment" />
            </LinearLayout>
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout><!--</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>-->
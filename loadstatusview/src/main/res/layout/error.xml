<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/common_error_msg"
        android:textColor="@color/base_msg_color"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_undo_cause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_undo_cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/undo_cause"
            android:textColor="@color/base_msg_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_undo_cause_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_msg_color"
            android:textSize="16sp"
            tools:text="@string/undo_cause" />
    </LinearLayout>

</LinearLayout>